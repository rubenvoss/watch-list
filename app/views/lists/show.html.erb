
<h1>List Name: <%= @list.name %></h1>
<h1>List Bookmarks:</h1>
<% @list.bookmarks.each do |bookmark| %>
<br>
<p>comment: <%= bookmark.comment %></p>

<%= link_to "Delete this Bookmark", bookmark_path(bookmark), data: { "turbo-method": :delete } %>

<% end %>
<br>
<br>
<br>
<% if @list.photo.attached? %>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<br>
<br>
<%= link_to "Back to all lists", lists_path %>
<br>
<br>
<%= link_to "Add Bookmark to this list", new_list_bookmark_path(params[:id]) %>
